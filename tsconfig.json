{
  "extends": "@electron-toolkit/tsconfig/tsconfig.json",
  "include": ["electron.vite.config.*", "src/**/*", "electron-builder.yml"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@main/*": ["src/main/*"],
      "@renderer/*": ["src/renderer/src/*"],
      "@shared/*": ["src/shared/*"]
    }
  }
}
